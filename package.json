{
  "name": "simple-express-node-ts-for-microservices-small",
  "version": "1.0.0",
  "description": "Production-ready transcription service with Azure Speech-to-Text integration, workflow engine, and MongoDB indexing for scalability",
  "main": "dist/server.js",
  "author": {
    "name": "Sachin Talekar",
    "email": "sachin.talekar08@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/iamSachinDev/transcription-workflow-api.git"
  },
  "bugs": {
    "url": "https://github.com/iamSachinDev/transcription-workflow-api/issues"
  },
  "homepage": "https://github.com/iamSachinDev/transcription-workflow-api#readme",
  "keywords": [
    "transcription",
    "workflow",
    "azure",
    "speech-to-text",
    "mongodb",
    "typescript",
    "express",
    "rest-api"
  ],
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon --watch src --ext ts --exec ts-node src/server.ts",
    "clean": "rimraf dist .tsbuildinfo",
    "prebuild": "npm run clean && npm run swagger-gen",
    "build": "tsc",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "swagger-gen": "ts-node src/swagger.ts"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "mongodb": "^7.0.0",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.25.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.1",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "mongodb-memory-server": "^10.4.1",
    "neostandard": "^0.12.2",
    "nodemon": "^3.1.11",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "swagger-autogen": "^2.23.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}