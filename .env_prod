# Environment Configuration
NODE_ENV=production

# Server Configuration
PORT=7777

# MongoDB Configuration
# UPDATE THIS: Point to your production MongoDB server
MONGO_URI=mongodb://production-server:27017
MONGO_DB_NAME=transcription_prod

# Service Configuration
SERVICE_ID=transcription-service

# Feature Flags (JSON format)
# Control which modules and features are enabled
FEATURE_FLAGS={"modules":{"users":true,"transcriptions":true},"features":{"users":{"list":true},"transcriptions":{"create":true,"list":true,"recent":true,"getOne":true}}}

# Retry Configuration
RETRIES=2
BACKOFF_MS=200

# Security Configuration
# CORS - Strict origins for production
# UPDATE THIS: Add your actual production domains
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Rate Limiting
# 100 requests per 15 minutes per IP
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Compression
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024

# Azure Speech-to-Text Configuration (Optional)
# Uncomment and add your actual Azure production credentials
# AZURE_SPEECH_KEY=your_production_azure_speech_key
# AZURE_REGION=your_production_azure_region
